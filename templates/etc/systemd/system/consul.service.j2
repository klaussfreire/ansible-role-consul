[Unit]
Description="HashiCorp Consul - A service mesh solution"
Documentation=https://www.consul.io/
Requires=network-online.target
After=network-online.target

[Service]
Type={{consul_service_file_type}}
User={{consul_user}}
Group={{consul_group}}
ExecStart={{consul_bin}} agent {{consul_daemon_options}}
ExecReload={{consul_bin}} reload
KillMode={{consul_service_file_kill_mode}}
Restart={{consul_service_file_restart}}
RestartSec={{consul_service_file_restart_sec}}
LimitNOFILE={{consul_service_file_limit_no_file}}
TimeoutStopSec={{consul_service_file_timeout_stop_sec}}

[Install]
WantedBy=multi-user.target
