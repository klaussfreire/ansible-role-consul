[Unit]
Description="HashiCorp Consul - A service mesh solution"
Documentation=https://www.consul.io/
Requires=network-online.target
After=network-online.target

[Service]
Type=notify
User=consul
Group=consul
ExecStart=/bin/bash -c "{{consul_bin}} agent -config-dir={{consul_config_dir}} -datacenter $(curl -s http://169.254.169.254/latest/meta-data/placement/availability-zone/ | rev | cut -c2- | rev)"
ExecReload={{consul_bin}} reload
KillMode=process
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
